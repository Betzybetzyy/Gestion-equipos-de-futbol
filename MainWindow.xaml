<Window x:Class="EVA1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EVA1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="False">
            <Menu Width="800" DockPanel.Dock="Top" IsMainMenu="True" Height="20">
                <MenuItem Header="Equipo">
                    <MenuItem Header="Agregar" Click="MenuItem_AgregarEquipo_Click"/>
                    <MenuItem Header="Listar todos" Click="MenuItem_ListarEquipo_Click"/>
                </MenuItem>
                <MenuItem Header="Información">
                    <MenuItem Header="Acerca de..." Click="MenuItem_AcercaDe_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
